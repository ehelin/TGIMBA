<!DOCTYPE html>
<html>
<head>
    <meta content="width=device-width, minimum-scale=1, maximum-scale=1" name="viewport"/>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/desktopsite.css?foo=bar")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

    <!-- hack to keep mobile javascript away from non-mobile browser  --> 
    @if (Session["IsMobile"] != null && Session["IsMobile"].ToString() == "True") 
    {
        <script src="@Url.Content("~/Scripts/jquery.mobile-1.0.1.js")" type="text/javascript"></script>
    }
    
</head>
<body  class="body">
    @RenderBody()
</body>
</html>

