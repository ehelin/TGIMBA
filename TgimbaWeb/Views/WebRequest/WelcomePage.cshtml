@model TgimbaRestService.Models.BaseModel
@{
    ViewBag.Title = "TGIMBA";
}

<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/BucketList/WelcomePage/Global.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/BucketList/Chart.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/BucketList/Data.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/BucketList/ServerCalls.js")" type="text/javascript"></script>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    var mobile = @Json.Encode(Model.IsMobile);

    if (!mobile)
    {
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);
    }
</script>

@Styles.Render("~/Content/Desktop.css")

<div class="Html5JqueryBody">
    <h2><center>Welcome to 'The Globe In My Bucket <i>Application</i>' <br />(TGIMBA)</center></h2>

    <div>  
        <table class="DashboardSpan">  
            <tr>  
                <td class="DashboardTotalUsers" >  
                    <div id="UserCnt" name="UserCnt" ></div>  
                </td>  
                <td class="DashboardPartSpan" ><div id="Category" name="Category" ></div></td>  
                <td class="DashboardPartSpan" ><div id="Achieved" name="Achieved" ></div></td>  
                <td class="DashboardPartSpan" ><div id="Created" name="Created\" ></div></td>  
                </tr>  
        </table>    
     </div>
    
    <p>
        This is a site to place your desired list of things you wish to complete while you are alive.
    </p>
    <p>
        I created TGIMBA because I am passionate about living my life through such a list.  It keeps me focused
        since there are so many things I wish to do.  I truly believe that you have between now and the
        time your number is up and what you do with it is up to you.
    </p>
    <p>
        This is also a work in progress that is allowing me to explore different technologies and how they
        can be applied to the Internet. There are no warranties (implied or otherwise) and everyone is free
        to use it as is.
    </p>
    <p>
        Please click <a href="http://www.tgimba.com/WebRequest/DirectRequest">here</a>
        <!-- Please click <a href="http://localhost:12738/WebRequest/DirectRequest">here</a -->
                to start.
    </p>
    <p>
        Login as the demo user to preview the application functionality <a href="http://www.tgimba.com/WebRequest/DirectRequestDemoUser">here.</a> 
        <!-- Login as the demo user to preview the application functionality <a href="http://localhost:12738/WebRequest/DirectRequestDemoUser">here.</a> -->
    </p>
</div>

@{Html.RenderPartial("Footer");}